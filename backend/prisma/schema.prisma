generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  STORE_OWNER
}

model User {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(60)
  email     String   @unique
  password  String
  address   String   @db.VarChar(400)
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores    Store[]   @relation("UserStores")
  ratings   Rating[]  @relation("UserRatings")
}

model Store {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  address   String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner     User     @relation("UserStores", fields: [ownerId], references: [id])
  ratings   Rating[] @relation("StoreRatings")
}

model Rating {
  id        String   @id @default(uuid())
  rating    Int
  userId    String
  storeId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User   @relation("UserRatings", fields: [userId], references: [id])
  store     Store  @relation("StoreRatings", fields: [storeId], references: [id])

  @@unique([userId, storeId])
}
